<a name="pagecontent" id="pagecontent"></a>

<div class="section page-using-xen">
  <div class="page-about__heading" style="background-image: url('{{ section.settings.background_image.src | image_url }}')">
    <div class="page-about__heading-content inside-banner">
      <h1>{{ section.settings.page_title }}</h1>
      <p class="subtitle">{{ section.settings.page_subtitle }}</p>
    </div>
  </div>
  <div class="page-about__heading-content mobile-only">
    <h1>{{ section.settings.page_title }}</h1>
    <p class="subtitle">{{ section.settings.page_subtitle }}</p>
  </div>
</div>

{% schema %}

  {
  "name": "Page | Heading",
  "class": "page-using-xen-heading-section",
  "settings": [
  {
  "type": "text",
  "id": "page_title",
  "label": "Page Title"
  },
  {
  "type": "html",
  "id": "page_subtitle",
  "label": "Page Subtitle"
  },
  {
  "type": "image_picker",
  "id": "background_image",
  "label": "Page Title Background"
  }
  ]
  }

{% endschema %}
