<div class="text-image">
  <h2>{{ section.settings.section_title }}</h2>

  <div class="research-blocks" data-research-slider>
    {% for block in section.blocks %}
      <div class="research-blocks__item">
        <h2>{{ block.settings.block_title }}</h2>
        {{ block.settings.block_content }}
        <a href="{{ block.settings.block_url }}" class="secondary-btn">{{ block.settings.block_url_text }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}

  {
  "name": "Research",
  "class": "page-research-section",
  "settings": [
  {
  "type": "text",
  "id": "section_title",
  "label": "Section Title"
  }
  ],
  "blocks": [{
  "type":"research_block",
  "name":"Research Block",
  "settings": [
    {
    "type": "text",
    "id": "block_title",
    "label": "Block Title"
    },
    {
    "type": "textarea",
    "id": "block_content",
    "label": "Block Title"
    },
    {
    "type": "text",
    "id": "block_url_text",
    "label": "Block URL Text"
    },
    {
    "type": "text",
    "id": "block_url",
    "label": "Block URL"
    }
  ]
  }
  ]
  }

{% endschema %}
