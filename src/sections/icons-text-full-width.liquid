<div class="icons-content icons-content-text-full-width">
  <div class="icons-content__logo-list">
    <div class="icons-content__logo-list-item">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_content }}</p>
    </div>
  </div>
  <div class="icons-content__foreground-image" style="background-image: url('{{ section.settings.foreground_image.src | image_url }}')">
    {% if section.settings.influencer_name != empty %}
      <div class="featured-section__image-influencer">
        {{ section.settings.influencer_name }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}

  {
  "name": "Icons Full Width",
  "class": "icons-full-width",
  "settings": [
  {
  "type": "text",
  "id": "section_title",
  "label": "Section Title"
  },
  {
  "type": "html",
  "id": "section_content",
  "label": "Section Content"
  },
  {
  "type": "image_picker",
  "id": "foreground_image",
  "label": "Image"
  },
  {
  "type": "text",
  "id": "influencer_name",
  "label": "Influencer name"
  }
  ]
  }

{% endschema %}
